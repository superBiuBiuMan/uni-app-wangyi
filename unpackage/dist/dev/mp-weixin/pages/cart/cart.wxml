<view class="cartContainer"><view class="title">购物车</view><block wx:if="{{cartData.length!=0}}"><view class="cartList"><block wx:for="{{cartData}}" wx:for-item="cartItem" wx:for-index="index" wx:key="id"><view class="cartItem"><text data-event-opts="{{[['tap',[['selectItem',[index]]]]]}}" class="{{['iconfont','icon-xuanzhong',(cartItem.isSelect)?'selected':'']}}" bindtap="__e"></text><view class="shopItem"><image class="shopImg" src="{{cartItem.listPicUrl}}"></image><view class="shopInfo"><text>{{cartItem.name}}</text><text class="price">{{"￥"+cartItem.retailPrice}}</text></view></view><view class="countCtrl"><text data-event-opts="{{[['tap',[['isAdd',[false,index]]]]]}}" class="del" bindtap="__e">-</text><text class="count">{{''+cartItem.amount+''}}</text><text data-event-opts="{{[['tap',[['isAdd',[true,index]]]]]}}" class="add" bindtap="__e">+</text></view></view></block></view><view class="cartFooter"><text data-event-opts="{{[['tap',[['selectAll',[!isAllSelect]]]]]}}" class="{{['iconfont','icon-xuanzhong',(isAllSelect)?'selected':'']}}" bindtap="__e"></text><text class="allSelected">{{"已选 "+selectCount}}</text><view class="right"><text class="totalPrice">{{"合计: ￥"+totalMoney}}</text><text class="preOrder">下单</text></view></view></block><block wx:else><image class="cartImg" src="http://yanxuan-static.nosdn.127.net/hxm/yanxuan-wap/p/20161201/style/img/icon-normal/noCart-d6193bd6e4.png?imageView&type=webp" mode></image><view class="hint">购物车还是空的，赶紧去购物吧</view></block></view>